<Window x:Class="StudentsManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentsManager.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Выйти" />
            <MenuItem Header="Редактирование">
                <MenuItem Header="Добавить" />
                <MenuItem Header="Сохранить" />
                <MenuItem Header="Удалить" />
                <MenuItem Header="Очистить" />
            </MenuItem>
        </Menu>

        <ToolBar DockPanel.Dock="Top"></ToolBar>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            
            <ListBox Grid.Column="0"></ListBox>
            
            <StackPanel Grid.Column="1"
                        Orientation="Vertical">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Фамилия"
                               Target="InputLastName"/>
                        <TextBox x:Name="InputLastName"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Имя"
                               Target="InputFirstName"/>
                        <TextBox x:Name="InputFirstName"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Дата рождения"
                               Target="InputDateOfBirth"/>
                        <DatePicker x:Name="InputDateOfBirth"/>
                        <TextBlock x:Name="InputAge"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Факультет"
                               Target="InputFaculty"/>
                        <TextBox x:Name="InputFaculty"/>
                    </StackPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal">
                    <Button Content="Добавить"></Button>
                    <Button Content="Сохранить"></Button>
                    <Button Content="Удалить"></Button>
                    <Button Content="Очистить"></Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>